<div class="works-page-background">
  <div class="container">
  	<div class="col-md-6">
    	<%= image_tag @work.image.url(:large) %>
    </div>
    <div class="col-md-6">
    	<h3><strong>Title: </strong><%= @work.title %></h3>
    	<h3><strong>Year Created:</strong> <%= @work.year %></h3>
    	<h3><strong>Price: </strong>$<%= @work.price.to_i %></h3>
    	<h3><strong>Description: </strong><%= @work.description %></h3>
    	<h3><strong>Medium: </strong><%= @work.medium %></h3>
      <h3><strong>Style: </strong><%= @work.style %></h3>
    	<h3><strong>Tags: </strong><%= @work.tag_list.to_s %></h3>
    </div>
    <%= link_to 'Artist Gallery', artist_path(@work.artist), class: "btn btn-success btn-lg hpbutton" %>
    <% if user_signed_in? %>
    	<%= link_to 'Edit', artist_path(@work.artist), class: "btn btn-success btn-lg hpbutton" %>
      <%= link_to 'Delete', artist_work_path(@artist, @work), method: :delete, class: "btn btn-success btn-lg hpbutton" %>
      <button id='go_back' class='btn btn-success btn-lg hpbutton'>Go Back</button>
      <% if current_user && current_user.is_artist == false %>
        <button id='add_tile' class='btn btn-success btn-lg hpbutton'>Add Tile</button>
      <% end %>
      <div class="likes"><%= pluralize(@work.likers(User).count, 'like')%></div>
    <% end %>
  </div>
</div>


<script>
$( '#go_back' ).click( function() {
  window.history.back()
});

$( '#add_tile' ).click( function() {
  console.log('likes? <%= current_user.likes? @work %>')
  <% current_user.like!(@work) %>
  console.log('likes? <%= current_user.likes? @work %>')
});
</script>