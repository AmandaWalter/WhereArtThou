<div class="search-page-background">
	<div class="container">
		<div class="col-md-6">	
			<h1>Popular Tags</h1>

			<div id='tag_cloud'>
			  <% tag_cloud Work.tag_counts, %w[s m l] do |tag, css_class|   %>
			    <%= link_to tag.name, tag_path(tag.name), class: css_class %>
			  <% end %>

			</div>

			<h1>Works</h1>
			<% @works.each do |work| %>

			  <p><%= link_to (image_tag work.image.url(:thumb)), artist_work_path(work.artist, work) %>
			  <%= link_to work.title, artist_work_path(work.artist, work) %></p>
			  <br>
			<% end %>
		</div>

		<div class="col-md-6">
			<h1>Artists</h1>
			<% @artists.each do |artist| %>

			  <p><%= link_to (gravatar_for artist), artist_path(artist), class:"gravatar" %>
					 <%= link_to artist.username, artist_path(artist) %></p>
			  <br>
			<% end %>

			<h1>Users</h1>
			<% @users.each do |user| %>
				<p><%= link_to (gravatar_for user), user_path(user), class:"gravatar" %>
					 <%= link_to user.username, user_path(user) %></p>
			  <br>
			<% end %>
		</div>
	</div>
</div>