<script>

$(document).ready( function() {
	
	$( '.hover-work' ).click( function() {
		var id_num = $(this).attr('id');
		$.ajax({
			  url: "/works/get_work_data",
			  data: {"work": id_num} 
			}).done(function() {
			  $( this ).addClass( "done" );
			});
	});


});

</script>