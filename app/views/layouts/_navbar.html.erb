<nav class="navbar-fixed-top navbar">
	<div class="navbar-header">
		<%= link_to (image_tag "WATlogo.jpg", class: "img img-responsive logo"), root_path %>
  </div>

  <%= form_tag works_path, class: "navbar-form navbar-right search-bar", role: "search", method: "get" do %>
    <div class="form-group">
      <%= text_field_tag :search,"", class: "form-control", placeholder: "Search by artist or work." %>
    </div>
   <%= submit_tag "SEARCH", class: "btn btn-default hpbutton" %>
  <% end %>

	<ul class="nav navbar-nav pull-right nav-links">
		<li><%= link_to 'HOME', root_path %></li>
		<li><%= link_to 'MISSION', about_path %></li>
		<li><%= link_to 'DISCOVER', discover_path %></li>
		<% if !current_user %>
			<li><%= render 'layouts/signup_modal' %></li>
		  <li><%= link_to 'LOG IN', new_user_session_path %></li>
		<% else %>
			<% if current_user.is_artist %>
       <li><%= link_to current_user.username.upcase, artist_path(current_user.artist) %></li>
      <% elsif current_user.is_venue %>
       <li><%= link_to current_user.username.upcase, venue_path(current_user.venue) %></li>
     	<% else %>
        <li><%= link_to current_user.username.upcase, user_path(current_user) %></li>
     <% end %>
		  <li><%= link_to 'LOG OUT', destroy_user_session_path, method: :delete %></li>	
		<% end %>
	</ul>
</nav>
