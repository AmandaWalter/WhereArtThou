<nav class="navbar navbar-default navbar-fixed-top">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to (image_tag "WATlogo.jpg", class: "img img-responsive logo"), root_path %>
    </div>
    <%= form_tag works_path, class: "navbar-form navbar-right search-bar", role: "search", method: "get" do %>
      <div class="form-group">
        <%= text_field_tag :search,"", class: "form-control", placeholder: "Find Art, Artists, Venues, Events" %>
      </div>
     <%= submit_tag "SEARCH", class: "btn btn-default hpbutton" %>
    <% end %>  

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
   
    <ul class="nav navbar-nav navbar-right nav-links">
      <li><%= link_to 'HOME', root_path %></li>
      <li><%= link_to 'MISSION', about_path %></li>
      <li><%= link_to 'DISCOVER', discover_path %></li>
      <% if !current_user %>
        <li><%= render 'layouts/signup_modal' %></li>
        <li><%= link_to 'LOG IN', new_user_session_path %></li>
      <% else %>
        <% if current_user.is_artist %>
         <li><%= link_to current_user.username.upcase, artist_path(current_user.artist) %></li>
        <% elsif current_user.is_venue %>
         <li><%= link_to current_user.username.upcase, venue_path(current_user.venue) %></li>
        <% else %>
          <li><%= link_to current_user.username.upcase, user_path(current_user) %></li>
       <% end %>
        <li><%= link_to 'LOG OUT', destroy_user_session_path, method: :delete %></li> 
      <% end %>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
