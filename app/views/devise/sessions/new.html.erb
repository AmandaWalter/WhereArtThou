<h2 class="heading-font form-container">LOG IN</h2>

<div class="form-container">
  <div class="col-md-3 col-sm-4 col-xs-12">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, class: "form-label" %><br />
        <%= f.email_field :email, autofocus: true, class: "form-input" %>
      </div>

      <div class="field">
        <%= f.label :password, class: "form-label" %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-input" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: "form-label" %>
        </div>
      <% end %>
    </div>

    <div class="col-md-3 col-sm-4 col-xs-12">
      <div class="actions">
        <%= f.submit "SIGN IN", class: "btn btn-success btn-lg hpbutton form-submit" %>
      </div>

      <h2 class="heading-font">---- OR ----</h2><br>

      <%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook), class: "btn btn-success btn-lg hpbutton form-submit" %>
    </div>
  <% end %>
</div>